	 <% breadcrumb :contacts %> 

      <!-- form -->
      <div class="form-wrapper">
        <ul class="form-list">
          <li class="form-item">
          <label for="" class="form-label">お問い合わせ内容</label>
           <%= form_for @contact, :url => contacts_thanks_path do |f| %>
        
          <li class="form-item">
          <label for="" class="form-label">お名前</label>
              <%= f.hidden_field :name %>
              <%= @contact.name %>
            </li>

          <li class="form-item">
           <label for="" class="form-label">メールアドレス</label>
            <td>
              <%= f.hidden_field :email %>
              <%= @contact.email %>
            </li>

          <li class="form-item">
          <label for="" class="form-label">その他</label>
              <%= f.hidden_field :message %>
              <%= simple_format(@contact.message) %>
               </li>
           </ul>
        </div>
        
        <%= f.submit '送信', :class => 'submit-btn' %>
      <% end %>
